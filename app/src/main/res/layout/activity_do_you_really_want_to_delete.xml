<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        tools:context=".activities.DoYouReallyWantToDelete">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="确认删除?"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_margin="30dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <Button
            android:id="@+id/cancel_del"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:layout_gravity="center|bottom"
            android:background="@drawable/grey_circle_corner_left"
            android:text="取消"
            android:textColor="@color/white"/>
        <Button
                android:id="@+id/confirm_delete"
                android:text="确定"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_gravity="center|bottom"
                android:background="@drawable/blue_circle_corner_right"/>
    </LinearLayout>
</LinearLayout>